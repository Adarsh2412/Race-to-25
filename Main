        System.out.println("D    D         III      CC           EE");
        System.out.println("D      D       III      CC           EE");
        System.out.println("D        D     III      CC           EEEEEEE");
        System.out.println("D        D     III      CC           EEEEEEE");
        System.out.println("D      D       III      CC           EE");
        System.out.println("D    D         III      CC           EE");
        System.out.println("D  D           III      CCCCCCC      EEEEEEE");
        System.out.println("DDD            III      CCCCCCC      EEEEEEE");
        System.out.println("\n\n\n\n\nMENU:-");
        System.out.println("1.NEW GAME");
        System.out.println("2.OBJECTIVE");
        System.out.println("2.INSTRUCTIONS");
        System.out.println("3.QUIT");
        System.out.println("CHOOSE(1,2,3) FROM THE GIVEN OPTIONS AND PRESS ENTER");
    }
    //fn to display 1
