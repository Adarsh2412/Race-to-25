    //function to check dice no.
    public int diceRoll()
    {
        do
        {
            int n=(int)(Math.random()*100);
            if(n<=96&&n>=16)
            {
                return(n/16);
            }
            
        }while(true);

    }
    
    //function main
    public void main()
    {
        Scanner sc =new Scanner (System.in);
        int choice =0;
        do
        {
            display();
            choice=sc.nextInt();
            if(choice==1)
            {
                System.out.println("Enter player 1's name ");
                String name1=sc.next();
                System.out.println("Enter player 2's name ");
                String name2=sc.next();
                int ar1[]=new int [100];
                int ar2[]=new int [100];
                int i,sum1=0,sum2=0,roll=0;
                boolean b=true;
                for(i=0;sum1!=25&&sum2!=25;i++)
                {
                    do
                    {
                        System.out.println(name1+" press yes and then enter to roll the dice");
                        if(sc.nextLine().equals("yes"))
                        {
                            roll = diceRoll();
                            ar1[i]=roll;
                            if(roll==1)
                            {
                                display1();
                            }   
                            else if(roll==2)
                            {
                                display2();
                            }
                            else if(roll==3)
                            {
                                display3();
                            }
                            else if(roll==4)
                            {
                                display4();
                            }   
                            else if(roll==5)
                            {
                                display5();
                            }
                            else if(roll==6)
                            {
                                display6();
                            }
                            
                            sum1+=roll;
                            if(sum1>25)
                            {
                                sum1-=roll;
                                System.out.println("the sum has crossed the limit there fore it will not be added");
                            }
                            System.out.println(name1+" your current sum is "+sum1); 
                            do
                            {
                                b=true;
                                System.out.println(name2+" press yes and then enter to roll the dice");
                                if(sc.nextLine().equals("yes"))
                                {
                                    roll=diceRoll();
                                    ar2[i]=roll;
                                    if(roll==1)
                                    {
                                        display1();
                                    }
                                    else if(roll==2)
                                    {
                                        display2();
                                    }
                                    else if(roll==3)
                                    {
                                        display3();
                                    }
                                    else if(roll==4)
                                    {
                                        display4();
                                    }
                                    else if(roll==5)
                                    {
                                        display5();
                                    }
                                    else if(roll==6)
                                    {
                                        display6();
                                    }   
                                    sum2+=roll;
                                    if(sum2>25)
                                    {
                                        sum2-=roll;
                                        System.out.println("the sum has crossed the limit there fore it will not be added");
                                    }   
                                    System.out.println(name2+" your current sum is "+sum2);
                                    b=false;
                                }
                                else
                                {
                                    System.out.println(name2+" please repeat the instruction(yes should be in small letters)\nTHANK YOU");
                                    b=true;
                                }
                            }while(b);        
                        }
                        else
                        {
                            System.out.println(name1+" please repeat the instruction(yes should be in small letters)\nTHANK YOU");
                            b=true;
                        }      
                    }while(b);
                }
                if(sum1==25&&sum2==25)
                {
                    boolean br=false;
                    System.out.println("Since both "+name1+" and "+name2+" got 25 in thier same chance\nThe higher scoring person in this roll will be the winner");
                    do
                    {
                        br=false;
                        System.out.println(name1+"'s turn\nSo press space and then press enter ");
                        ar1[i]=diceRoll();
                        System.out.println(name2+"'s turn\nSo press space and then press enter ");
                        ar2[i]=diceRoll();
                        if(ar1[i]>ar2[i])
                        {
                            System.out.println(name1+" WON!!!!!");
                        }
                        else if(ar2[i]>ar1[i])
                        {
                            System.out.println(name2+" WON!!!!!");
                        }
                        else
                        {
                            System.out.println("both of you rolled the same number again");
                            b=true;
                            i++;
                        }
                    }while(br);
                    
                }
                else if(sum1==25)
                {
                    System.out.println(name1+" WON!!!!!");i--;
                }
                else
                {
                    System.out.println(name2+" WON!!!!!");i--;
                }
                System.out.println(name1+"  "+name2);
                for(int j=0;j<=i;j++)
                {
                    System.out.println("  "+ar1[j]+"     "+ar2[j]);
                } 
            }
            else if(choice ==2)
            {
                System.out.println("OBJECTIVE OF THE GAME IS TO REACH THE SUM OF 25 BEFORE THE OTHER PLAYER\n");
            }
            else if(choice ==3)
            {
                System.out.println("THE RULES OF THE GAME ARE SIMPLE\nALL YOU HAVE TO DO IS FOLLOW THE INSTRUCTIONS SHOWN ON THE SCREEN\n");
            }
            else if(choice ==4)
            {
                System.out.println("THANKS FOR PLAYING\n");
            }
            else
            {
                System.out.println("PLEASE ENTER FROM 1 OR 2 OR 3 ONLY");
            }
            
        }while(choice!=4);
    
    }
}
